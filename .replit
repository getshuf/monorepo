run = "tsx index.ts"
entrypoint = "index.ts"
hidden = [".config", "package-lock.json", "tsconfig.json"]
modules = ["nodejs-20", "nodejs-23"]

[nix]
channel = "stable-24_05"
packages = ["gh"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".config"]

[deployment]
run = ["tsx", "index.ts"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 8089
externalPort = 3000

[agent]
expertMode = true

[workflows]
runButton = "Build"

[[workflows.workflow]]
name = "Build"
mode = "parallel"
author = 51624948

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow]]
name = "J"
mode = "sequential"
author = 51624948

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx -y @agent-infra/mcp-server-filesystem --port 8089 --allowed-directories src"

[[workflows.workflow]]
name = "Link it"
mode = "sequential"
author = 51624948

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm link -l . && bash"
