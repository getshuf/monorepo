run = "tsx index.ts"
entrypoint = "index.ts"
hidden = [".config", "package-lock.json", "tsconfig.json"]
modules = ["nodejs-20", "nodejs-23"]

[nix]
channel = "stable-24_05"
packages = ["gh"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".config"]

[deployment]
run = ["tsx", "index.ts"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 8089
externalPort = 3000

[agent]
expertMode = true
integrations = ["javascript_anthropic_ai_integrations:2.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Build"
mode = "parallel"
author = 51624948

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow]]
name = "J"
mode = "sequential"
author = 51624948

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd .. && npx -y @agent-infra/mcp-server-filesystem --port 8089 --allowed-directories workspace"

[[workflows.workflow]]
name = "Link it"
mode = "sequential"
author = 51624948

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsc && npm link -l . && bash"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Project"

[[workflows.workflow]]
name = "Build Project"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[workflows.workflow.metadata]
outputType = "console"
